{
  "extends": "gts/tslint.json",
  "linterOptions": {
    "exclude": [
      "**/*.json"
    ]
  },
  "rules": {
    "ban-ts-ignore": false,
    "max-line-length": [
      true,
      {
        "limit": 140,
        "ignore-pattern": "^import |^export {(.*?)}|class [a-zA-Z]+ implements |// "
      }
    ],
    "no-any": false
  }
}
